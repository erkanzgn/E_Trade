@model CreateLoginDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Trendshop Giriş</title>
    <!-- base:css -->
    <link rel="stylesheet" href="~/spica-1.0.0/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/spica-1.0.0/vendors/css/vendor.bundle.base.css">
    <!-- inject:css -->
    <link rel="stylesheet" href="~/spica-1.0.0/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/spica-1.0.0/images/favicon.png" />
</head>

<body>
    <div class="container-scroller d-flex">
        <div class="container-fluid page-body-wrapper full-page-wrapper d-flex">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo text-center">
                                <img src="~/images/default.png" alt="logo">
                            </div>
                            <h4>Hoş geldiniz!</h4>
                            <h6 class="font-weight-light">Devam etmek için giriş yapın.</h6>

                            <form class="pt-3" id="loginForm" method="post">
                                <div class="form-group">
                                    <input type="text" asp-for="UserName" name="username" class="form-control form-control-lg" id="username" placeholder="Kullanıcı Adı">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="Password" name="password" class="form-control form-control-lg" id="password" placeholder="Şifre">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-lg font-weight-medium auth-form-btn"
                                            style="background-color: #ffcc00; color: black;">
                                        GİRİŞ YAP
                                    </button>
                                </div>

                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> Beni hatırla
                                        </label>
                                    </div>
                                    <a href="#" class="auth-link text-black">Şifremi unuttum</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Hesabın yok mu? <a href="/Register/Index" class="text-primary">Kayıt Ol</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- JS files -->
    <script src="~/spica-1.0.0/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/spica-1.0.0/js/off-canvas.js"></script>
    <script src="~/spica-1.0.0/js/hoverable-collapse.js"></script>
    <script src="~/spica-1.0.0/js/template.js"></script>

    <!-- jQuery & Validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.3/jquery.validate.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#loginForm").validate({
                rules: {
                    username: {
                        required: true,
                        minlength: 3
                    },
                    password: {
                        required: true,
                        minlength: 6
                    }
                },
                messages: {
                    username: {
                        required: "Kullanıcı adı gereklidir.",
                        minlength: "En az 3 karakter giriniz."
                    },
                    password: {
                        required: "Şifre gereklidir.",
                        minlength: "Şifre en az 6 karakter olmalıdır."
                    }
                },
                errorClass: "text-danger",
                errorElement: "span",
                errorPlacement: function (error, element) {
                    error.insertAfter(element);
                }
            });

            $('#loginForm').on('submit', function (e) {
                if (!$(this).valid()) {
                    e.preventDefault(); // Formu post etme
                }
            });
        });
    </script>

</body>

</html>
