
<div class="col-lg-4">
    <form class="mb-30" asp-controller="Discount" asp-action="ConfrimDiscountCoupon" method="post">
        <div class="input-group">
            <input type="text" name="code" value="@ViewBag.Code" class="form-control border-0 p-4" placeholder="Kupon Kodu">
            <div class="input-group-append">
                <button class="btn btn-primary">Kuponu Uygula</button>
                <br />
       
            </div>
        </div>
    </form>
    @if (ViewBag.code!=null)
    {
        <h6 class="section-title position-relative text-uppercase mb-3 text-primary"><span class="bg-secondary pr-3">@ViewBag.code Kuponu uygulandı</span></h6>
    }
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-3">
                <h6>Toplam Ürün Fiyatı</h6>
                <h6>@ViewBag.total.₺</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">KDV(%10)</h6>
                <h6 class="font-weight-medium">@ViewBag.taxPrice₺</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">İndirim(%@ViewBag.DiscountRate)</h6>
                <h6 class="font-weight-medium">-@ViewBag.discountPrice₺</h6>
            </div>
        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h5>Toplam</h5>
                <h5>@ViewBag.totalPrice₺</h5>
            </div>

            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödeme Adımına Geç</button>
        </div>

    </div>
</div>
