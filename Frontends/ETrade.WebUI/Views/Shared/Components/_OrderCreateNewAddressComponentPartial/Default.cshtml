@model CreateOrderAddressDto

<div class="modal fade" id="shipping-address">
    <div class="modal-dialog modal-fullscreen" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="section-title position-relative text-uppercase mb-3 text-center">Yeni Adres Girişi</h5>
                <button type="button" class="btn btn-outline-info btn-sm" data-dismiss="modal" aria-label="Close">x</button>
            </div>
            <div class="modal-body bg-light p-30">
                <form method="post" action="/Order/CreateOrderAddress/">
                    <input type="hidden" asp-for="UserId" value="@ViewBag.AppUserId" />
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Adınız</label>
                            <input class="form-control" type="text" asp-for="Name" placeholder="Adınız" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Soyadınız</label>
                            <input class="form-control" type="text" asp-for="Surname" placeholder="Soyadınız" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-mail</label>
                            <input class="form-control" type="text" asp-for="Email" placeholder="email@email.com" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Telefon Numaranız</label>
                            <input class="form-control" type="text" asp-for="Phone" placeholder="123 456 78 90" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres - 1</label>
                            <input class="form-control" type="text" asp-for="Detail1" placeholder="Adresiniz" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres - 2</label>
                            <input class="form-control" type="text" asp-for="Detail2" placeholder="Adresiniz Devamı">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Ülke</label>
                            <select class="custom-select" asp-for="Country" required>
                                <option selected>Türkiye</option>
                                <option>Azerbaycan</option>
                                <option>Bulgaristan</option>
                                <option>Yunanistan</option>
                                <option>Rusya</option>
                                <option>Ukrayna</option>
                            </select>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Şehir</label>
                            <input class="form-control" type="text" asp-for="City" placeholder="İstanbul" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>İlçe</label>
                            <input class="form-control" type="text" asp-for="District" placeholder="İlçe" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Posta Kodu</label>
                            <input class="form-control" type="text" asp-for="ZipCode" placeholder="Posta Kodu" required>
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Açıklama</label>
                            <input class="form-control" type="text" asp-for="Description" placeholder="Açıklama" required>
                        </div>
                        <div class="col-md-12 form-group text-center">
                            <button type="submit" name="surname" class="btn btn-outline-success rounded mt-2">Adresi Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-outline-info">Kapat</button>
            </div>
        </div>
    </div>
</div>