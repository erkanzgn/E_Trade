@model UpdateOrderAddressDto;

@if (Model.AddressId != 0)
{
    <div class="col-lg-8">
        <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Teslimat ve Fatura Adresi</span></h5>
        <div class="bg-light p-30 mb-5">
            <form method="post" action="/Order/UpdateOrderAddress/">
                <input type="hidden" asp-for="AddressId" />
                <input type="hidden" asp-for="UserId" />
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Adınız</label>
                        <input class="form-control" type="text" asp-for="Name" placeholder="Adınız" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Soyadınız</label>
                        <input class="form-control" type="text" asp-for="Surname" placeholder="Soyadınız" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>E-mail</label>
                        <input class="form-control" type="text" asp-for="Email" placeholder="email@email.com" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Telefon Numaranız</label>
                        <input class="form-control" type="text" asp-for="Phone" placeholder="123 456 78 90" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Adres - 1</label>
                        <input class="form-control" type="text" asp-for="Detail1" placeholder="Adresiniz" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Adres - 2</label>
                        <input class="form-control" type="text" asp-for="Detail2" placeholder="Adresiniz Devamı">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Ülke</label>
                        <select class="custom-select" asp-for="Country" required>
                            <option selected>Türkiye</option>
                            <option>Azerbaycan</option>
                            <option>Bulgaristan</option>
                            <option>Yunanistan</option>
                            <option>Rusya</option>
                            <option>Ukrayna</option>
                        </select>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Şehir</label>
                        <input class="form-control" type="text" asp-for="City" placeholder="İstanbul" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>İlçe</label>
                        <input class="form-control" type="text" asp-for="District" placeholder="İlçe" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Posta Kodu</label>
                        <input class="form-control" type="text" asp-for="ZipCode" placeholder="Posta Kodu" required>
                    </div>
                    <div class="col-md-12 form-group">
                        <label>Açıklama</label>
                        <input class="form-control" type="text" asp-for="Description" placeholder="Açıklama" required>
                    </div>
                    <div class="col-md-12 form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" asp-for="Isdefault" id="defaultAddress">
                            <label class="custom-control-label" for="defaultAddress">Bu Adrese Gönder</label>
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" asp-for="IsInvoice" id="billingAdress">
                            <label class="custom-control-label" for="billingAdress">Fatura Adresim</label>
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <button type="submit" name="district" class="btn btn-outline-success rounded">Adres ve Teslimat Bilgilerini Güncelle</button>
                    </div>
                </div>
            </form>
        </div>
        @await Component.InvokeAsync("_AppUserAddressesComponentPartial")
    </div>
}
else
{
    <div class="col-lg-8">
        <h5 class="section-title position-relative text-uppercase text-danger mb-3"><span class="bg-secondary pr-3">Kayıtlı Adresiniz Yok veya Varsayılan Adresiniz Seçili Değil. Lütfen Adres Ekleyin veya Adresiniz Varsa Seçim Yapın.</span></h5>
        @await Component.InvokeAsync("_AppUserAddressesComponentPartial")
    </div>
}