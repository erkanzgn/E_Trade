@model List<ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml"; 
    var tableRowColors = new List<string> { "table-info", "table-warning", "table-danger", "table-success", "table-primary", "table-secondary", "table-dark" };
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sipariş Geçmişim</h4>

                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Sipariş No</th>
                                    <th>Tutar</th>
                                    <th>Tarih</th>
                                    <th>Sipariş Detayı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    var item = Model[i];
                                    var rowColor = tableRowColors[i % tableRowColors.Count];
                                    <tr class="@rowColor">
                                        <th>@(i + 1)</th>
                                        <td>@item.TotalPrice</td>
                                        <td>@item.OrderDate.ToString("dd-MMM-yyyy")</td>
                                        <td><a href="#" class="btn btn-outline-info btn-sm rounded">Sipariş Detayları</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

